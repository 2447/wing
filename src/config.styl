// Colors
color-black = #111111
color-gray = #A7A7A7
color-white = #F5F5F5
color-blue = #0062FF
color-red = #ff1500
color-yellow = #ffbf00
color-green = #00b30f

// Fonts
font = -apple-system, BlinkMacSystemFont, Avenir, "Avenir Next", "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif

// Typography Scale
// let s = size, b = base (5rem), r = ratio, and l = level -> s = b * (r ^ l)
typography-size-ratio = 0.81818882300002700653041023264539150793593585267923 // size7 = size1 * (ratio^6)
typography-size-1 = 5rem
typography-size-2 = round(typography-size-1 * typography-size-ratio, 2)
typography-size-3 = round(typography-size-1 * (typography-size-ratio ** 2), 2)
typography-size-4 = round(typography-size-1 * (typography-size-ratio ** 3), 2)
typography-size-5 = round(typography-size-1 * (typography-size-ratio ** 4), 2)
typography-size-6 = round(typography-size-1 * (typography-size-ratio ** 5), 2)
typography-size-7 = 1.5rem

typography-size-small-ratio = 0.84919066478247639245628226232987468010175004516799 // 1.5 = smallSize1 * (smallRatio^6)
typography-size-small-1 = 4rem
typography-size-small-2 = round(typography-size-small-1 * typography-size-small-ratio, 2)
typography-size-small-3 = round(typography-size-small-1 * (typography-size-small-ratio ** 2), 2)
typography-size-small-4 = round(typography-size-small-1 * (typography-size-small-ratio ** 3), 2)
typography-size-small-5 = round(typography-size-small-1 * (typography-size-small-ratio ** 4), 2)
typography-size-small-6 = round(typography-size-small-1 * (typography-size-small-ratio ** 5), 2)

// Grid
columns = 12

// Transition
transition = all .2s ease

// Border
round-border(color)
  border: 1px solid color
  border-radius: 2px
